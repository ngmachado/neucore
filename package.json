{
    "name": "neurocore",
    "version": "0.0.1",
    "description": "Modern AI framework for building context-aware AI applications",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc && cp src/plugins/plugin-config.json dist/plugins/",
        "dev": "tsc --watch",
        "start": "node dist/app.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "docs": "typedoc --out docs src",
        "prepublishOnly": "npm run build",
        "prepare": "npm run build",
        "validate": "npm run lint && npm run test",
        "clean": "rimraf dist",
        "build:clean": "npm run clean && npm run build"
    },
    "keywords": [
        "ai",
        "machine-learning",
        "llm",
        "memory",
        "context",
        "embeddings",
        "mcp"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=14.0.0"
    },
    "dependencies": {
        "axios": "^1.8.4",
        "dotenv": "^16.0.3",
        "node-fetch": "^3.3.2",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/node": "^22.14.1",
        "@types/node-fetch": "^2.6.12",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.29.1",
        "@typescript-eslint/parser": "^8.29.1",
        "@vitest/coverage-v8": "^3.1.1",
        "eslint": "^9.24.0",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "typescript": "^5.8.3",
        "vitest": "^3.1.1"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md",
        "COMPONENT-STATUS.md"
    ]
}