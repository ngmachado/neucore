# NeuroCore Environment Variables

# OpenAI Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_organization_id_optional
OPENAI_API_ENDPOINT=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-4o
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_DELAY=1000
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Anthropic Provider Configuration (if used)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
LOG_LEVEL=info
NODE_ENV=development

# API Keys
ALFAFRENS_API_KEY=your_alfafrens_api_key_here

# Alfafrens Configuration
ALFAFRENS_USER_ID=bot
ALFAFRENS_CHANNEL_ID=general
ALFAFRENS_USERNAME=NeurocoreBot
ALFAFRENS_POLL_INTERVAL=30
ALFAFRENS_ENABLE_POST=false
ALFAFRENS_POST_INTERVAL_MIN=3600
ALFAFRENS_POST_INTERVAL_MAX=7200
POLLING_INTERVAL=5000

# Runtime Configuration
RUNTIME_ENDPOINT=http://localhost:3000
RUNTIME_API_KEY=dev-key

# Model Configuration
OPENAI_MODEL=gpt-4o
ANTHROPIC_MODEL=claude-3-opus-20240229 